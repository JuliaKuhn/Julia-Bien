
<% content_for :page_title, "Homepage" %>

<nav class="filters">
  <%= link_to "All Prices", root_path %>

  <div>
  <%= link_to "10 CHF", root_path(price: 10, cuisine: @cuisine, location: @location) %>
  <%= link_to "50 CHF", root_path(price: 50, cuisine: @cuisine, location: @location) %>
  <%= link_to "100 CHF", root_path(price: 100, cuisine: @cuisine, location: @location) %>
</div>

  <div>
  <%= link_to "Indian", root_path(cuisine: "Indian", price: @price, location: @location) %>
<%= link_to "Mexican", root_path(cuisine: "Maxican", price: @price, location: @location) %>
<%= link_to "Swiss", root_path(cuisine: "Swiss", price: @price, location: @location) %>
</div>

<from action="/">
  <input type="text" name="location"
  placeholder="Search location ..." value="<%= @location %>">
<input type="hidden" name="price" value="<%= @price %>">
<input type="hidden" name="cuisine" value="<%= @cuisine %>>

</form>

</nav>

<% @reviews.each do |review| %>

<div class="review">
  <%= link_to review.title, review_path(review) %>

</div>

<% end %>
